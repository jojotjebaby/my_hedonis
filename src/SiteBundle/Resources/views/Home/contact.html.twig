{% extends "SiteBundle::layout.html.twig" %}

{% block title %}
   About - {{ parent() }}
{% endblock %}

{% block body %}
<section id="index" style="min-height:60vh;">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row">
        	<!-- begin of the about page -->

        	<div class="jumbotron">
            <h3> Contact Hedonis Ambachtsbier</h3>
			      <div class="container" style="padding-top: 40px;">



            <div class="container col-xs-12 col-sm-7 col-md-7 col-lg-7">
              <div class="row">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}

                {# Idem pour un autre champ. #}
                <div class="form-group">
                  {{ form_label(form.name, "Name:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-3 col-lg-3 control-label'}}) }}
                  {{ form_errors(form.name) }}
                  <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                <div class="form-group">
                  {{ form_label(form.email, "Email:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-3 col-lg-3 control-label'}}) }}
                  {{ form_errors(form.email) }}
                  <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                <div class="form-group">
                  {{ form_label(form.message, "Message:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-3 col-lg-3 control-label'}}) }}
                  {{ form_errors(form.message) }}
                  <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
                <div class="form-group">
                  {{ form_label(form.copy,"Get a copy of this message",{'label_attr': {'class': 'col-xs-9 col-sm-6 col-md-6 col-lg-6 control-label'}}) }}
                  <div class="col-xs-3 col-sm-6 col-md-6 col-lg-6">
                    {{ form_widget(form.copy, {'attr': {'class': 'form-control','style': 'height:15px;'}}) }}
                  </div>
                </div>
                </br>
                <input type="submit" value="Send the message" class="btn btn-warning text-center" />
                {{ form_rest(form) }}
                {{ form_end(form) }}
              </div>
            </div>
            <div class="container col-xs-12 col-sm-5 col-md-5 col-lg-5">
              <div class="row">
                <img src="/img/contact/leo.png"  class="img-responsive img-rounded center-block">
                <img src="/img/contact/janos.png"  class="img-responsive img-rounded center-block">
              </div>
            </div>




					    



			     </div>
			    </div>

        	<!--End of the page -->
        </div>
      </div>
    </div>
</section>
{% endblock %}






































{% extends "SiteBundle::layout.html.twig" %}

{% block title %}
   Admin Section - {{ parent() }}
{% endblock %}

{% block body %}
<section id="index" style="min-height:60vh;">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row well">
          <!-- Button to add an article -->
          <a href="{{ path('admin_articles_add')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a new article</a>


          <h1>List with all the articles</h1>
            <!-- table with all the subscribers -->
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Content</th>
                  <th>Hyperlink</th>
                  <th>Date</th>
                  <th>Modify</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                {% for article in listArticles %}
                <tr>
                  <td>{{ article.title }}</td>
                  <td>{{ article.content}}</td>
                  <td>{{ article.hyperlink }}</td>
                  <td>{{ article.date|date("d/m/Y") }}</td>
                  <td><a href="{{ path('admin_articles_mod', {'id': article.id})}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modify</a></td>
                  <td><a href="{{ path('admin_articles_del', {'id': article.id})}}" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a></td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
            
        </div>
      </div>
    </div>
</section>
{% endblock %}
{% extends "SiteBundle::layout.html.twig" %}

{% block title %}
   Admin Section - {{ parent() }}
{% endblock %}

{% block body %}
<section id="index" style="min-height:60vh;">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row well">
          <!-- Button to add an article -->
          <a href="{{ path('admin_sales_add')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a new sale point</a>


          <h1>List with all the points of sale</h1>
            <!-- table with all the subscribers -->
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Adress</th>
                  <th>Tel</th>
                  <th>Website</th>
                  <th>Type</th>
                  <th>Modify</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                {% for sales in listSales %}
                <tr>
                  <th>{{ sales.name }}</th>
                  <th>{{ sales.adresse }}</th>
                  <th>{{ sales.tel }}</th>
                  <th>{{ sales.website }}</th>
                  <th>{{ sales.type }}</th>
                  <th><a href="{{ path('admin_sales_mod', {'id': sales.id})}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modify</a></th>
                  <th><a href="{{ path('admin_sales_del', {'id': sales.id})}}" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a></th>
                </tr>
                {% endfor %}
              </tbody>
            </table>
            
        </div>
      </div>
    </div>
</section>
{% endblock %}
{% extends "SiteBundle::layout.html.twig" %}

{% block title %}
   Admin Section - Delete a point of sale {{ parent() }}
{% endblock %}

{% block body %}
<section id="index" style="min-height:60vh;">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row well">
          <h1>Delete a point of sale</h1>

            <p> Are you sur you want to delete the {{ sale.name }} sales point?</p>
    
            <a href="{{ path('admin_sales') }}" class="btn btn-success" style="width:150px;margin-bottom:10px;">No !</a>

            {{ form_start(form) }}
            <input type="submit" class="btn btn-danger" value="Yes delete it." style="width:150px;"/>
            {{ form_end(form) }}
            
            
        </div>
      </div>
    </div>
</section>
{% endblock %}